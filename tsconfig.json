{
  "files": ["src/index.ts"],
  "compilerOptions": {
    "skipLibCheck": true,
    "noImplicitAny": true,
    "lib": ["ES5", "ES6", "ES2017", "ES2020", "ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist"
  },
  "include": ["src/**/*"]
}
